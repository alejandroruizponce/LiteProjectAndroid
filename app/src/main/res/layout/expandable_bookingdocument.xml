<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:background="@color/white">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/expand_more"
            android:id="@+id/arrowBookingDocument" android:layout_weight="1"
            android:background="@android:color/transparent" android:scaleType="fitXY"
            android:layout_centerVertical="true" android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/dateBookingDocumentCell" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/dateTextBookingDocumentTextViewCell"
            app:layout_constraintStart_toEndOf="@+id/dateTextBookingDocumentTextViewCell"
            android:layout_marginStart="16dp"/>

    <TextView
            android:text="20/07/2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dateBookingDocumentCell"
            android:layout_gravity="center_vertical" android:fontFamily="@font/robotobold"
            android:textSize="19dp" android:textColor="#00429A"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/dateTextBookingDocumentTextViewCell"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>
    <TextView
            android:text="@string/fecha_de_reserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:id="@+id/dateTextBookingDocumentTextViewCell" android:textColor="@color/gray"
            android:textSize="12dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/robotomedium"/>
</android.support.constraint.ConstraintLayout>