<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CurrentVersion.Activities.Forgot_Password" android:background="@color/white">


    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="56dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="w,1:1" android:id="@+id/appBarLayout">
        <android.support.v7.widget.Toolbar android:layout_width="match_parent" android:layout_height="wrap_content"
                                           android:background="@color/white"
                                           android:id="@+id/toolbar"
                                           android:minHeight="56dp" app:layout_constraintEnd_toEndOf="parent"
                                           app:layout_constraintStart_toStartOf="parent"
                                           app:layout_constraintTop_toTopOf="parent">


            <TextView
                    android:text="@string/recuperar_contrase_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/titleBarAdPro"
                    android:layout_gravity="center_horizontal|center_vertical" android:fontFamily="@font/robotomedium"
                    tools:layout_editor_absoluteY="21dp" android:textSize="18dp" android:textColor="#00429A"
            />

            <Button
                    android:text=""
                    android:layout_width="24dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_height="24dp" android:id="@+id/buttonBackAG"
                    android:background="@drawable/back_arrow"/>


        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>
    <TextView
            android:text="@string/por_favor_introduce_tu_correo_electr_nico_y_te_enviaremos_un_email_con_las_instrucciones_para_recuperar_tu_contrase_a"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView3" android:textColor="@color/darkBlue" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:textAlignment="center" app:layout_constraintHorizontal_bias="0.0"
            android:textSize="14dp"/>
    <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/typeSuscriptionView"
            android:layout_height="65dp"
            android:animateLayoutChanges="true"
            android:background="@color/whiteBlue"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView3">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:errorEnabled="false" app:boxStrokeColor="@color/darkBlue"
                app:boxStrokeWidth="1sp">
            <EditText
                    android:id="@+id/typeSuscriptionEditText"
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:inputType="textEmailAddress"
                    android:paddingTop="5dp"
                    android:textColorHighlight="@color/softBlueWithAlpha"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:fontFamily="@font/robotoregular" android:textSize="18sp"
                    android:textColor="@color/darkBlue" android:singleLine="false" android:selectAllOnFocus="false"
                    android:textAlignment="viewStart" android:textColorLink="#3F51B5"/>

        </android.support.design.widget.TextInputLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="3dp"
                android:text="Email" android:fontFamily="@font/robotoregular"
                android:textColor="@color/softBlue" android:layout_marginStart="15dp" android:textSize="14dp"/>
    </RelativeLayout>
    <Button
            android:text="@string/recuperar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true" android:id="@+id/buttonRecoveryPass"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button" android:fontFamily="@font/robotomedium"
            android:textSize="16dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/typeSuscriptionView"/>

</android.support.constraint.ConstraintLayout>