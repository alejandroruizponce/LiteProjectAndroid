<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:background="@color/whiteBlue">

    <Button
            android:text="PDF"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/buttonPDFCellGuestDocument"
            android:background="@drawable/blueborder_button"
            android:textSize="12dp"
            android:textColor="@color/softBlue"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/guestNameCellGuestDocument"
            app:layout_constraintTop_toTopOf="@+id/guestNameCellGuestDocument"/>
    <TextView
            android:text="Gregory Castro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guestNameCellGuestDocument"
            android:layout_gravity="center_vertical" android:fontFamily="@font/robotobold"
            android:textSize="19dp" android:textColor="#00429A"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>
</android.support.constraint.ConstraintLayout>