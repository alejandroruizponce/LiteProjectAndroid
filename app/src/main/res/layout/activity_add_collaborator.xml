<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OldVersionFiles.AddCollaborator" android:background="@color/white">

    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="56dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="w,1:1" android:id="@+id/appBarLayout">
        <android.support.v7.widget.Toolbar android:layout_width="match_parent" android:layout_height="wrap_content"
                                           android:background="@color/white"
                                           android:id="@+id/toolbar"
                                           android:minHeight="56dp" app:layout_constraintEnd_toEndOf="parent"
                                           app:layout_constraintStart_toStartOf="parent"
                                           app:layout_constraintTop_toTopOf="parent">
            <Button
                    android:text=""
                    android:layout_width="24dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_height="24dp" android:id="@+id/buttonBackNewCol"
                    android:background="@drawable/back_arrow" android:textSize="14dp"/>

            <TextView
                    android:text="@string/addnewCol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/titleBarColaborators"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center_vertical" android:fontFamily="@font/robotomedium"
                    tools:layout_editor_absoluteY="21dp" android:textSize="18dp" android:textColor="#00429A"
            />


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/emailNewColView"
            android:layout_height="65dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:animateLayoutChanges="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/whiteBlue"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/appBarLayout">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:errorEnabled="false"
                app:boxStrokeColor="@color/darkBlue"
                app:boxStrokeWidth="1sp">
            <EditText
                    android:id="@+id/emailNewColEditText"
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:paddingTop="5dp"
                    android:textColorHighlight="@color/softBlueWithAlpha"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:fontFamily="@font/robotoregular" android:textSize="18dp"
                    android:textColor="@color/darkBlue" android:singleLine="false"
                    android:selectAllOnFocus="false"
                    android:textAlignment="viewStart" android:textColorLink="#3F51B5"/>

        </android.support.design.widget.TextInputLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="3dp"
                android:text="@string/emailRegister" android:fontFamily="@font/robotoregular"
                android:textColor="@color/softBlue" android:layout_marginStart="15dp" android:textSize="14dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/phoneNewColView"
            android:layout_height="65dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:animateLayoutChanges="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/whiteBlue"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/emailNewColView">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:errorEnabled="false"
                app:boxStrokeColor="@color/darkBlue"
                app:boxStrokeWidth="1sp">
            <EditText
                    android:id="@+id/phoneNewColEditText"
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:paddingTop="5dp"
                    android:textColorHighlight="@color/softBlueWithAlpha"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:fontFamily="@font/robotoregular" android:textSize="18dp"
                    android:textColor="@color/darkBlue" android:singleLine="false"
                    android:selectAllOnFocus="false"
                    android:textAlignment="viewStart" android:textColorLink="#3F51B5"/>

        </android.support.design.widget.TextInputLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="3dp"
                android:text="@string/phoneRegister" android:fontFamily="@font/robotoregular"
                android:textColor="@color/softBlue" android:layout_marginStart="15dp" android:textSize="14dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/nameNewColView"
            android:layout_height="65dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:animateLayoutChanges="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/whiteBlue"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/phoneNewColView">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:errorEnabled="false"
                app:boxStrokeColor="@color/darkBlue"
                app:boxStrokeWidth="1sp">
            <EditText
                    android:id="@+id/nameNewColEditText"
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:paddingTop="5dp"
                    android:textColorHighlight="@color/softBlueWithAlpha"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:fontFamily="@font/robotoregular" android:textSize="18dp"
                    android:textColor="@color/darkBlue" android:singleLine="false"
                    android:selectAllOnFocus="false"
                    android:textAlignment="viewStart" android:textColorLink="#3F51B5"/>

        </android.support.design.widget.TextInputLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="3dp"
                android:text="@string/nameRegister" android:fontFamily="@font/robotoregular"
                android:textColor="@color/softBlue" android:layout_marginStart="15dp" android:textSize="14dp"/>
    </RelativeLayout>
    <TextView
            android:text="@string/al_pulsar_invitar_colaborador_un_email_ser_enviado_a_tu_colaborador_con_sus_credenciales_de_acceso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/titleScanDocument" android:textColor="@color/darkBlue" android:textSize="18dp"
            android:fontFamily="@font/robotoregular" android:textAlignment="center" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/nameNewColView" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>
    <Button
            android:text="@string/invitar_colaborador"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true" android:id="@+id/buttonInviteColaborator"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button" android:fontFamily="@font/robotomedium"
            android:textSize="16dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView15"/>

</android.support.constraint.ConstraintLayout>