<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="130dp" android:background="@color/white">

    <TextView
            android:id="@+id/statusMessageCellBD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/robotoregular"
            android:text="Identificado"
            android:textColor="@color/darkBlue"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusTitleCellBD" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp" android:fontFamily="@font/robotomedium" android:text="COMPLETADO"
            android:textColor="@color/darkBlue"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/guestNameCellBD"
            android:id="@+id/statusTitleCellBD" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guestNameCellBD"/>

    <TextView
            android:id="@+id/guestNameCellBD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/robotobold"
            android:text="Greg Castro"
            android:textColor="@color/darkBlue"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@+id/editGuestButtonCell"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/statusCircleCellBD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/guestNameCellBD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guestNameCellBD"
            app:srcCompat="@drawable/yellowcircle" />

    <ImageButton
            android:id="@+id/editGuestButtonCell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/guestNameCellBD"
            app:layout_constraintEnd_toStartOf="@+id/removeGuestButtonCell"
            app:layout_constraintTop_toTopOf="@+id/guestNameCellBD"
            app:srcCompat="@drawable/pencil_icon" />

    <ImageButton
            android:id="@+id/removeGuestButtonCell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/editGuestButtonCell"
            app:layout_constraintEnd_toStartOf="@+id/statusTitleCellBD"
            app:layout_constraintTop_toTopOf="@+id/editGuestButtonCell"
            app:srcCompat="@drawable/garbage" />

</android.support.constraint.ConstraintLayout>
