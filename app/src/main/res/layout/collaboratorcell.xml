<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="80dp" android:background="@color/white">

    <TextView
            android:text="Greg Castro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/collaboratorName" android:textColor="@color/darkBlue"
            android:fontFamily="@font/robotobold" android:textSize="18dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/eliminar"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/buttonRemoveCollaborator"
            android:background="@drawable/blueborder_button"
            android:textSize="12dp"
            android:textColor="@color/softBlue"
            app:layout_constraintTop_toTopOf="@+id/collaboratorName"
            app:layout_constraintBottom_toBottomOf="@+id/collaboratorName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>

</android.support.constraint.ConstraintLayout>