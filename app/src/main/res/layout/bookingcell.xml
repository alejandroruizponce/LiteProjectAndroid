<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/backgroundBookingCell"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white">


    <ProgressBar
            android:id="@+id/progressBarCellBooking"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/darkBlue"
            android:indeterminateTintMode="src_atop"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/totalGuests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/robotoregular"
            android:text="@string/_5_huespedes"
            android:textColor="@color/pink"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/pendingGuests"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/pendingGuests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/robotoregular"
            android:text="1 pendiente"
            android:textColor="@color/pink"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/propertyBooking"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/propertyBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/robotoregular"
            android:text="Carl Jeffriesâ€™ Hotel"
            android:textColor="@color/softBlue"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nightsBooking" />

    <TextView
            android:id="@+id/nightsBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/robotomedium"
            android:text="2 noches"
            android:textColor="@color/darkBlue"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainGuestBooking" />

    <TextView
            android:id="@+id/dateBookingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/robotomedium"
            android:text="05/08/2019"
            android:textColor="@color/softBlue"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/mainGuestBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/robotobold"
            android:text="Greg Castro"
            android:textColor="@color/darkBlue"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateBookingTextView" />

    <ImageView
            android:id="@+id/statusBookingCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/mainGuestBooking"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mainGuestBooking"
            app:srcCompat="@drawable/yellowcircle" />

    <Button
            android:id="@+id/buttonCompleteBooking"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button"
            android:text="@string/completar"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
