<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OldVersionFiles.SuscriptionActivity" android:background="@color/white">

    <Button
            android:text="@string/empezar_prueba"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true" android:id="@+id/buttonStartTrial"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button" android:fontFamily="@font/robotomedium"
            android:textSize="16dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView10"/>
    <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/numberHousesView"
            android:layout_height="65dp"
            android:animateLayoutChanges="true"
            android:background="@color/whiteBlue"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView5">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/expand_more"
                android:id="@+id/buttonNumberHouses" android:layout_weight="1"
                android:background="@android:color/transparent" android:scaleType="fitXY"
                android:layout_centerVertical="true" android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp" android:layout_gravity="center_vertical"
                android:visibility="invisible"/>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:errorEnabled="false" app:boxStrokeColor="@color/darkBlue"
                app:boxStrokeWidth="1sp">
            <EditText
                    android:id="@+id/numberHousesEditText"
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:inputType="number"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/robotoregular" android:textSize="18sp"
                    android:textColor="@color/darkBlue" android:singleLine="false" android:selectAllOnFocus="false"
                    android:textAlignment="viewStart" android:textColorLink="#3F51B5"/>

        </android.support.design.widget.TextInputLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="3dp"
                android:text="@string/n_mero_de_propiedades" android:fontFamily="@font/robotoregular"
                android:textColor="@color/softBlue" android:layout_marginStart="15dp" android:textSize="14dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/typeSuscriptionView"
            android:layout_height="65dp"
            android:animateLayoutChanges="true"
            android:background="@color/whiteBlue"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/numberHousesView">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/expand_more"
                android:id="@+id/imageButton2" android:layout_weight="1"
                android:background="@android:color/transparent" android:scaleType="fitXY"
                android:layout_centerVertical="true" android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp" android:layout_gravity="center_vertical"/>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:errorEnabled="false" app:boxStrokeColor="@color/darkBlue"
                app:boxStrokeWidth="1sp">
            <com.reginald.editspinner.EditSpinner
                    android:id="@+id/typeSuscriptionEditText"
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"

                    android:editable="false"
                    android:padding="15dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/robotoregular" android:textSize="18dp"
                    android:textColor="@color/darkBlue" android:singleLine="false" android:selectAllOnFocus="false"
                    android:textAlignment="viewStart" android:textColorLink="#3F51B5"
                    android:layout_marginTop="15dp"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="3dp"
                android:text="@string/tipo_de_suscripci_n" android:fontFamily="@font/robotoregular"
                android:textColor="@color/softBlue" android:layout_marginStart="15dp"
                android:background="@android:color/transparent" android:textSize="14dp"/>
    </RelativeLayout>
    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="56dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="w,1:1" android:id="@+id/appBarLayout">
        <android.support.v7.widget.Toolbar android:layout_width="match_parent" android:layout_height="wrap_content"
                                           android:background="@color/white"
                                           android:id="@+id/toolbar"
                                           android:minHeight="56dp" app:layout_constraintEnd_toEndOf="parent"
                                           app:layout_constraintStart_toStartOf="parent"
                                           app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:text="@string/suscripci_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/titleBarAdPro"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center_vertical" android:fontFamily="@font/robotomedium"
                    tools:layout_editor_absoluteY="21dp" android:textSize="18dp" android:textColor="#00429A"
            />




        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>
    <TextView
            android:text="@string/tipo_de_propiedad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:fontFamily="@font/robotoregular"
            android:textColor="@color/softBlue" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:textSize="14dp"/>
    <ImageButton
            android:layout_width="60dp"
            android:elevation="3dp"
            android:layout_height="60dp" app:srcCompat="@drawable/hotel_building"
            android:id="@+id/buttonHotelPlan" android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:background="@drawable/circular_botton"/>
    <ImageButton
            android:layout_width="60dp"
            android:elevation="3dp"
            android:layout_height="60dp" app:srcCompat="@drawable/home"
            android:id="@+id/buttonHousePlan" android:scaleType="centerInside"
            android:background="@drawable/circular_botton" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginStart="100dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:textColor="@color/darkBlue"
            android:fontFamily="@font/robotoregular"
            app:layout_constraintEnd_toEndOf="@+id/buttonHotelPlan"
            app:layout_constraintStart_toStartOf="@+id/buttonHotelPlan"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/buttonHotelPlan"
            android:textSize="14dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/info_icn"
            android:id="@+id/buttonHelpHotel"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@+id/textView5" app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/casa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:textColor="@color/darkBlue"
            android:fontFamily="@font/robotoregular"
            app:layout_constraintEnd_toEndOf="@+id/buttonHousePlan"
            app:layout_constraintStart_toStartOf="@+id/buttonHousePlan"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/buttonHousePlan"
            android:textSize="14dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/info_icn"
            app:layout_constraintTop_toTopOf="@+id/textView6"
            android:id="@+id/buttonHelpHouse"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/textView6"
            android:layout_marginStart="16dp"/>


    <RelativeLayout android:layout_width="0dp" android:layout_height="135dp"
                    android:layout_centerHorizontal="true" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/typeSuscriptionView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:background="#E3F3FF"
                    android:id="@+id/relativeLayout2">


        <TextView
                android:text="@string/plan_seleccionado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" android:id="@+id/textView7"
                android:layout_marginTop="8dp" android:textColor="@color/darkBlue"
                android:fontFamily="@font/robotobold"
                android:layout_centerHorizontal="true" android:textSize="14dp"/>
        <TextView
                android:text="0,00â‚¬"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pricePlanTextView"
                android:textColor="#003464" android:fontFamily="@font/robotobold"
                android:textSize="58dp" android:layout_centerInParent="true"/>
        <TextView
                android:text="/ AL MES por X propiedades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/subPriceTextView"
                android:fontFamily="@font/robotolight" android:textColor="#003464"
                android:layout_marginBottom="5dp" android:layout_alignParentBottom="true" android:textSize="14dp"/>
    </RelativeLayout>

    <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/robotoregular"
            android:text="@string/suscr_bete_ahora_y_prueba_14_d_as_gratis"
            android:textColor="#00367E"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

</android.support.constraint.ConstraintLayout>