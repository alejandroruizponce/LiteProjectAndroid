<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OldVersionFiles.AccountDetails" android:background="@color/white">

    <Button
            android:text="@string/guardar_cambios"
            android:layout_width="323dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/buttonSaveChangesAccount"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/robotomedium"
            android:textSize="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/repeatPassAccountView"/>
    <TextView
            android:text="@string/cambiar_contrase_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:id="@+id/selectListColTextView3" android:textColor="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/phoneAccountView" android:layout_marginTop="32dp"
            android:textSize="14dp"/>
    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="56dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="w,1:1" android:id="@+id/appBarLayout">
        <android.support.v7.widget.Toolbar android:layout_width="match_parent" android:layout_height="wrap_content"
                                           android:background="@color/white"
                                           android:id="@+id/toolbar"
                                           android:minHeight="56dp" app:layout_constraintEnd_toEndOf="parent"
                                           app:layout_constraintStart_toStartOf="parent"
                                           app:layout_constraintTop_toTopOf="parent">
            <Button
                    android:text=""
                    android:layout_width="24dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_height="24dp" android:id="@+id/buttonBackAccount"
                    android:background="@drawable/back_arrow" android:textSize="14dp"/>

            <TextView
                    android:text="@string/ajustes_de_cuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/titleBarColaborators"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center_vertical" android:fontFamily="@font/robotomedium"
                    tools:layout_editor_absoluteY="21dp" android:textSize="18dp" android:textColor="#00429A"
            />


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <TextView
            android:text="@string/detalles_de_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:id="@+id/selectListColTextView2" android:textColor="@color/gray"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            android:textSize="14dp"/>
    <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/emailAccountView"
            android:layout_height="65dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:animateLayoutChanges="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/whiteBlue"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/selectListColTextView2">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:errorEnabled="false"
                app:boxStrokeColor="@color/darkBlue"
                app:boxStrokeWidth="1sp">
            <EditText
                    android:id="@+id/emailAccountEditText"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    android:background="@android:color/transparent"
                    android:editable="false"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/robotoregular" android:textSize="18dp"
                    android:textColor="@color/darkBlue" android:singleLine="false"
                    android:selectAllOnFocus="false"
                    android:textAlignment="viewStart" android:textColorLink="#3F51B5"/>

        </android.support.design.widget.TextInputLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="3dp"
                android:text="Email" android:fontFamily="@font/robotoregular"
                android:textColor="@color/softBlue" android:layout_marginStart="15dp" android:textSize="14dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/phoneAccountView"
            android:layout_height="65dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:editable="false"
            android:animateLayoutChanges="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/whiteBlue"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/emailAccountView">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:errorEnabled="false"
                app:boxStrokeColor="@color/darkBlue"
                app:boxStrokeWidth="1sp">
            <EditText
                    android:id="@+id/phoneAccountEditText"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/robotoregular" android:textSize="18dp"
                    android:textColor="@color/darkBlue" android:singleLine="false"
                    android:selectAllOnFocus="false"
                    android:textAlignment="viewStart" android:textColorLink="#3F51B5"/>

        </android.support.design.widget.TextInputLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="3dp"
                android:text="@string/tel_fono" android:fontFamily="@font/robotoregular"
                android:textColor="@color/softBlue" android:layout_marginStart="15dp" android:textSize="14dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/currentPassAccountView"
            android:layout_height="65dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:animateLayoutChanges="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/whiteBlue"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/selectListColTextView3">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:errorEnabled="false"
                app:boxStrokeColor="@color/darkBlue"
                app:passwordToggleEnabled="true"
                app:boxStrokeWidth="1sp">
            <EditText
                    android:id="@+id/currentPassAccountEditText"
                    android:layout_width="match_parent"

                    android:inputType="textPassword"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/robotoregular" android:textSize="18dp"
                    android:textColor="@color/darkBlue" android:singleLine="false"
                    android:selectAllOnFocus="false"
                    android:textAlignment="viewStart" android:textColorLink="#3F51B5"/>

        </android.support.design.widget.TextInputLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="3dp"
                android:text="@string/contrase_a_actual" android:fontFamily="@font/robotoregular"
                android:textColor="@color/softBlue" android:layout_marginStart="15dp" android:textSize="14dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/newPassAccountView"
            android:layout_height="65dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:animateLayoutChanges="true"
            android:layout_marginEnd="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/whiteBlue"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/currentPassAccountView">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:errorEnabled="false"
                app:boxStrokeColor="@color/darkBlue"
                app:passwordToggleEnabled="true"
                app:boxStrokeWidth="1sp">
            <EditText
                    android:id="@+id/newPassAccountEditText"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/robotoregular" android:textSize="18dp"
                    android:textColor="@color/darkBlue" android:singleLine="false"
                    android:selectAllOnFocus="false"
                    android:textAlignment="viewStart" android:textColorLink="#3F51B5"/>

        </android.support.design.widget.TextInputLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="3dp"
                android:text="@string/nueva_contrase_a" android:fontFamily="@font/robotoregular"
                android:textColor="@color/softBlue" android:layout_marginStart="15dp" android:textSize="14dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/repeatPassAccountView"
            android:layout_height="65dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"

            android:animateLayoutChanges="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/whiteBlue"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/newPassAccountView">
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:errorEnabled="false"
                app:boxStrokeColor="@color/darkBlue"
                app:passwordToggleEnabled="true"
                app:boxStrokeWidth="1sp">
            <EditText
                    android:id="@+id/repeatPassAccountEditText"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/robotoregular" android:textSize="18dp"
                    android:textColor="@color/darkBlue" android:singleLine="false"
                    android:selectAllOnFocus="false"
                    android:textAlignment="viewStart" android:textColorLink="#3F51B5"/>

        </android.support.design.widget.TextInputLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="3dp"
                android:text="@string/repite_nueva_contrase_a" android:fontFamily="@font/robotoregular"
                android:textColor="@color/softBlue" android:layout_marginStart="15dp" android:textSize="14dp"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>